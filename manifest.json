{
    "name": "Jiggl",
    "description": "TODO",
    "version": "0.1",
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "https://toggl.com/*/*", "https://atlassian.net/*/*"
    ],
    "icons": {
        "32": "img/jiggl_32.png",
        "16": "img/jiggl_16.png",
        "48": "img/jiggl_48.png",
        "128": "img/jiggl_128.png"
    },
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_title": "Log Toggl.com entries to Jira",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["libs/jquery.min.js"]
    }],
    "manifest_version": 2
}
